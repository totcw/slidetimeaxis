<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.SearchView
        app:searchHintIcon="@drawable/ic_action_search"
        app:searchIcon="@drawable/ic_action_search"
        app:closeIcon="@drawable/ic_action_cancel"
        android:layout_width="match_parent"
        android:id="@+id/searchview"
        android:layout_height="wrap_content">

    </android.support.v7.widget.SearchView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:textSize="22sp"
        android:textColor="#00b6ec"
        android:id="@+id/id_tv_activity_search_localHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地记录" />

    <com.lyf.bookreader.view.SearchKeyLayout
        android:animateLayoutChanges="true"
        android:id="@+id/id_skl_activity_search_localHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.lyf.bookreader.view.SearchKeyLayout>

    <TextView
        android:padding="10dp"
        android:textSize="22sp"
        android:textColor="#00b6ec"
        android:id="@+id/id_tv_activity_search_hotSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门词汇" />

    <com.lyf.bookreader.view.SearchKeyLayout

        android:id="@+id/id_skl_activity_search_hotSearchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.lyf.bookreader.view.SearchKeyLayout>
</LinearLayout>