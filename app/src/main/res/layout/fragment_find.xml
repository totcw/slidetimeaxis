<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:background="@color/bg_blue"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/linear_find_searche"
            android:background="@drawable/shape_corner_blue"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/search_icon" />

            <TextView
                style="@style/textview_wrap"
                android:text="@string/fragment_find_searche"
                />
        </LinearLayout>
        
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_find"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
