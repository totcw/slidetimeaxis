<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
<!--顶部-->
    <LinearLayout
        android:background="@color/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_addbookcase_bookimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/iv_addbookcase_bookname"
                style="@style/textview_wrap"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/fragment_shouye_bookname"
                />

            <TextView
                android:id="@+id/iv_addbookcase_author"
                style="@style/textview_wrap"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/fragment_shouye_author"
                />

            <TextView
                android:id="@+id/iv_addbookcase_status"
                style="@style/textview_wrap"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/fragment_shouye_status"
                />

            <TextView
                android:id="@+id/iv_addbookcase_add"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_corner_blue"
                android:gravity="center"
                android:text="@string/fragment_shouye_addcase"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
    <!--简介-->
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_addbookcase_introduce"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_addbookcase_introduce"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介:"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="16sp"
            />



    </LinearLayout>

</LinearLayout>
