<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/linear_rv_bookcase"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_rv_bookcase_bookimage"

        android:layout_width="120dp"
        android:layout_height="200dp"
        android:background="@mipmap/zwt"
        />

    <TextView
        android:id="@+id/tv_rv_bookcase_bookimage"
        style="@style/textview_wrap"
        android:text="@string/item_rv_bookcase_bookname"
        android:textColor="@color/shouye_renmen_tv"
        />


</LinearLayout>
